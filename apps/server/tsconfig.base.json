{
  "extends": "@ojo/typescript-config/base.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./build",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "plugins": [
      /* Transform paths in output .js files */
      {
        "transform": "typescript-transform-paths"
      },
      /* Transform paths in output .d.ts files */
      {
        "transform": "typescript-transform-paths",
        "afterDeclarations": true
      }
    ],
    /* Extending middleware adds etc on request */
    "typeRoots": ["@types"]
  },
  "ts-node": {
    "transpileOnly": true,
    "files": true
  },
  "include": ["."],
  "exclude": ["build", "node_modules"]
}
